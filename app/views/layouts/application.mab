html do
   head do
     title { show_page_title }
     #title { "Nayabei Vanwoerkom - Artwork" }
     text! stylesheet_link_tag 'style', 'jquery.jcarousel.css', 'skin'

     if session[:user]
       text! stylesheet_link_tag 'lightbox'
       text! javascript_include_tag "application"
     else
       #gallery fade effect
       text! javascript_include_tag 'jquery-1.3.2.min.js'
       text! javascript_include_tag 'jquery.jcarousel.pack.js'

       script :type => "text/javascript" do
"jQuery.noConflict();

function viewpic(index){
  var active = jQuery('.slideshow div.active'),
    curIndex = jQuery('div.photoitem').index(active),
      thumbIndex = curIndex+1,
	newThumbIndex = index+1;
  if(curIndex == index)return;
  var selector = '.slideshow div.photoitem:eq('+index+')',
    next = jQuery(selector);
  active.fadeTo('slow', 0.0);
  next.css('opacity', '0.0');
  //active.css('display', 'hidden').fadeOut('slow');
  next.addClass('active');
  next.fadeTo('slow', 1.0);
  active.removeClass('active last-active');

  jQuery('li.jcarousel-item[jcarouselindex='+thumbIndex+'] img').fadeTo(0,.5);
  jQuery('li.jcarousel-item[jcarouselindex='+newThumbIndex+'] img').fadeTo(0,.5);

}


jQuery(document).ready(function(){


  jQuery('#thumb_list').jcarousel({
    scroll:2
  });

  jQuery('.slideshow div:first').addClass('active');

  jQuery('li.jcarousel-item[jcarouselindex] img').each(function() {

    jQuery(this).mouseover(function() {
      var currentOpacity = jQuery(this).css('opacity').toString();
      jQuery(this).fadeTo(0,1);

      jQuery(this).mouseout(function() {
        if(currentOpacity!='1'){
          jQuery(this).fadeTo(0,.5);
        }
      });

    });
  });


});"
       end
     end
     script :type => "text/javascript" do
       "b0 = new Image();
b0.src = '/assets/butterfly0.gif';

b1 = new Image();
b1.src = '/assets/butterfly.gif';"
     end
   end

   body do
     div :id =>"left-nav" do

       div :id => 'nav' do
         ul do

           li :class => 'home' do
             a :href => '/' do
               img :src => '/images/home.gif', :title => 'Home'
             end
           end
           li :class => 'artwork' do
             link_to('Artwork', 'javascript:;')
             ul :class => 'submenu', :style=> 'display: block' do
               li do
